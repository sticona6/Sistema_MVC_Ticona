<table class="table table-striped table-bordered" id="datatable">
    <thead>
        <tr>
            <th style="width:50px">Id</th>
            <th style="width:50px">Nombre</th>
            <th style="width:100px">Descripción</th>
            <th style="width:70px">Estado</th>
            <th style="width:250px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <th>@(m.categoria_id)</th>
                <th>@(m.nombre)</th>
                <th>@(m.descripcion)</th>
                <th>@(m.estado=="A" ? "Activo" : "Inactivo")</th>

                <th style="align-content:center">
                    <a href="~/Categoria/Ver/@m.categoria_id" class="btn btn-xs btn-warning">Detalle</a>
                    <a href="~/Categoria/AgregarEditar/@m.categoria_id" class="btn btn-xs btn-primary">Modificar</a>
                    <a href="~/Categoria/Eliminar/@m.categoria_id" class="btn btn-xs btn-danger"
                      onclick="return confirm('¿Esta Seguro que desea eliminar el registro?');" >Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>

